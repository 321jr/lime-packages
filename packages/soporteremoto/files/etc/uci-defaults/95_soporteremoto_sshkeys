#!/bin/sh
sshkeys="
ssh-rsa  soporteremoto@altermundi.net
ssh-rsa  id_guido@laptop
ssh-rsa  nicolas@fierrito
ssh-rsa  Gio <gio@diveni.re>
ssh-rsa  san@bonzo
"

authkeys="/etc/dropbear/authorized_keys"
umask 077 ; mkdir -p $(dirname $authkeys) ; touch $authkeys
IFS="
"
for key in $sshkeys ; do
  sed "\|^$key$|d" -i $authkeys
  echo   "$key"    >> $authkeys
done

### Disable root SSH access via password
passwd -l root
