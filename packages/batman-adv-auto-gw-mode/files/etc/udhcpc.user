#!/bin/sh
# Dirty hack to force writing nameservers after obtaining dhcp lease.
# udhcpc / netifd should do this already, but it's not working ATM.

if [ "$interface" == "br-lan:ipv4" ] ; then
	cat /dev/null >/tmp/resolv.conf.auto
	for dns in $dns; do                           
		echo "nameserver $dns" >>/tmp/resolv.conf.auto
	done                   
	for domain in $domain; do
		echo "search $domain" >>/tmp/resolv.conf.auto
	done
fi                                
