#!/usr/bin/lua

function main()
	local modules_name = { "hardware_detection", "wireless", "network", "firewall", "system" }
	local modules = {} 

	for _, name in pairs(modules_name) do modules[name] = require("lime."..name) end
	for _, module in pairs(modules) do module.clean() end
	for _, module in pairs(modules) do module.configure() end
end

main()
